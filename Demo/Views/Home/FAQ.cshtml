@{
    ViewData["Title"] = "Chatbox FAQ";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PawfectGrooming</title>
    <style>
        /* Basic styling for the chatbox container */
        .chatbox-container {
            width: 100%;
            max-width: 600px;
            margin: 20px auto;
            border: 1px solid #ccc;
            border-radius: 10px;
            display: flex;
            flex-direction: column;
            height: 70vh;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        /* Styling for the message history area */
        .chat-history {
            flex-grow: 1;
            padding: 20px;
            overflow-y: auto;
            display: flex;
            flex-direction: column;
        }

        /* Styling for individual chat messages */
        .chat-message {
            margin-bottom: 10px;
            padding: 10px 15px;
            border-radius: 18px;
            max-width: 80%;
            word-wrap: break-word;
        }

        .user-message {
            align-self: flex-end;
            background-color: #007bff;
            color: white;
            border-bottom-right-radius: 4px;
        }

        .bot-message {
            align-self: flex-start;
            background-color: #f1f1f1;
            color: #333;
            border-bottom-left-radius: 4px;
        }

        /* Styling for the input form */
        .chat-form {
            display: flex;
            padding: 10px;
            border-top: 1px solid #ccc;
        }

        .chat-form input {
            flex-grow: 1;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 20px;
            margin-right: 10px;
        }

        .chat-form button {
            padding: 10px 20px;
            border: none;
            border-radius: 20px;
            background-color: #007bff;
            color: white;
            cursor: pointer;
        }
    </style>
</head>
<body>

    <div class="chatbox-container">
        <div id="chat-history" class="chat-history">
            <div class="chat-message bot-message">Hello! Ask me any questions about our grooming services.</div>
        </div>
        <form id="chat-form" class="chat-form">
            <input type="text" id="user-input" placeholder="Type your question..." />
            <button type="submit">Send</button>
        </form>
    </div>

    @section Scripts {
        <script src="~/js/site.js"></script>
    }

</body>
</html>