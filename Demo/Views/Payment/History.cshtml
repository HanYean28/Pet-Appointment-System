@model List<PawfectGrooming.Models.Payment>
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<PawfectGrooming.Resources.Resources> Localizer
@using System.Globalization

@{
    ViewData["Title"] = "Payment History";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">@Localizer["Payment History"]</h1>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger text-center" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center" role="alert">
            @Localizer["No payments found."]
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>"Payment ID</th>
                        <th>@Localizer["Payment Method"]</th>
                        <th>@Localizer["Status"]</th>
                        <th>@Localizer["Date"]</th>
                        <th>@Localizer["Payment Type"]</th>
                        <th>@Localizer["E-receipt"]</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var payment in Model)
                    {
                        <tr>
                            <td>@payment.PaymentId</td>
                            <td>@payment.PaymentMethod</td>
                            <td>@Localizer[@payment.Status]</td>
                            <td>@payment.Date.ToString("dd/MM/yyyy h:mm tt")</td>
                            <td>@Localizer[@payment.PaymentType]</td>
                            <td>
                                <a asp-controller="Payment" asp-action="GenerateReceipt" asp-route-id="@payment.PaymentId" class="btn btn-primary btn-sm">
                                    <i class="fas fa-file-invoice"></i> @Localizer["Download"]
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>